{% extends '@Survey/admin/index.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                Team {{ team.name }}
            </div>
            <div class="panel-body">
                <table class="table table-bordered table-striped table-hover table-responsive">
                    <thead class="thead-default">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Module</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row"><a href="{{ path('team_show', { 'id': team.id }) }}">{{ team.id }}</a></th>
                            <td>{{ team.name }}</td>
                            <td>{{ team.module }}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('team_edit', { 'id': team.id }) }}" class="btn btn-info">Edit</a>
                                    {{ form_start(delete_form) }}
                                        <input type="submit" value="Delete" class="btn btn-danger">
                                    {{ form_end(delete_form) }}
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <a href="{{ path('team_index') }}" class="btn btn-bg btn-info">Back to the list</a>
            </div>
        </div>


    </div>
{% endblock %}
